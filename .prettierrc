{
  "overrides": [
    {
      "excludeFiles": ["**/node_modules/**"],
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    { "files": "*.js", "options": { "singleQuote": true, "semi": false } }
  ]
}
